<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>홈</title>
  </head>
  <body>
    <h1>😉HOME😊</h1>
    <div id="indexPage"></div>
    <script>
      (async function () {
        const token = localStorage.getItem("token");
        if (token) {
          const res = await axios({
            url: "/token",
            method: "POST",
            headers: `Authorization: Bearer ${token}`,
          });
          console.log(res);
          document.querySelector(
            "#indexPage"
          ).innerHTML = `${res.data.name}님 환영합니다.<button onclick = "logout()">로그아웃</button>`;
        } else {
          document.querySelector(
            "#indexPage"
          ).innerHTML = `<a href="/signup">회원가입</a> <a href="/signin">로그인</a>`;
        }
      })();
      function logout() {
        localStorage.clear();
        document.location.reload();
      }
    </script>
  </body>
</html>
