<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>로그인</title>
  </head>
  <body>
    <form name="userinfo">
      <fieldset>
        <legend>회원 정보</legend>
        <label for="userid">아이디: </label>
        <input type="text" , name="userid" , id="userid" /><br />
        <label for="pw">비밀번호: </label>
        <input type="password" name="pw" , id="pw" /><br />
        <button type="button" onclick="signin()">로그인</button>
      </fieldset>
    </form>
    <form action="/user/profile" method="post" name="form_profile">
      <input type="hidden" name="profile" />
    </form>
    <script>
      function signin() {
        const form = document.forms["userinfo"];
        const data = {
          userid: form.userid.value,
          pw: form.pw.value,
        };
        axios({
          method: "POST",
          url: "/user/signin",
          data,
        }).then((res) => {
          console.log(res.data);
          if (res.data[1] == false) {
            alert("회원 정보가 없습니다.");
            window.location.reload(); // 또는 form.reset();
          } else {
            const form_profile = document.forms["form_profile"];
            form_profile.profile.value = form.userid.value;
            form_profile.submit();

            //   return res.data[0][0];
          }
        });
        //   .then((res) => {
        //     console.log(res);
        //     if (confirm("로그인되었습니다.")) {
        //       window.location.href = `/user/profile?userid=${res.userid}&name=${res.name}&id=${res.id}`;
        //     }
        //   });
      }
    </script>
  </body>
</html>
